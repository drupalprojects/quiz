        db_query("CREATE FUNCTION plus_bigint_smallint_unsigned(bigint,smallint_unsigned)
          RETURNS bigint AS 'select $1 + $2::bigint'
          LANGUAGE 'sql';");

        db_query("CREATE OPERATOR + ( 
          PROCEDURE = plus_bigint_smallint_unsigned, 
